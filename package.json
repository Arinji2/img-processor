{
  "name": "process-image",
  "version": "0.0.1",
  "description": "An image processor that creates a webp file, a fallback png, and resizes it in tailwind breakpoints",
  "homepage": "https://github.com/Arinji2/process-image#readme",
  "bugs": {
    "url": "https://github.com/Arinji2/process-image/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arinji2/process-image.git"
  },
  "license": "ISC",
  "author": "Arinji2",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "process-image": "./bin/process-image.js"
  },
  "scripts": {
    "build": "rm -rf bin && mkdir -p bin && tsc --outDir bin && mv bin/index.js bin/process-image.js && chmod +x bin/process-image.js",
    "start": "node bin/process-image.js",
    "dev": "tsx src/index.ts",
    "test": "npm run build && node bin/process-image.js"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "sharp": "^0.33.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
